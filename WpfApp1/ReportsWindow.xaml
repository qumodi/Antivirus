<Window x:Class="Antivirus.ReportsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Звіти перевірок" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Список для відображення звітів -->
        <ListBox x:Name="ReportsListBox" Margin="10" />

        <!-- Кнопка для очищення -->
        <Button x:Name="ClearReportsButton" Content="Очистити звіти" Grid.Row="1" Margin="10" 
                HorizontalAlignment="Right" Width="150" Click="ClearReportsButton_Click" />
    </Grid>
</Window>
